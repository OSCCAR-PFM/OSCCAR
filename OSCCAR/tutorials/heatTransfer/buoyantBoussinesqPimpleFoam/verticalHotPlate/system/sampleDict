FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampleDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationScheme cellPoint;

setFormat       raw;

sets
(
    centreLine
    {
        type    face;
        axis    x;
        start   ( 0 0 0 );
        end     ( 0.1 0 0 );
    }
);

fields          ( U );


