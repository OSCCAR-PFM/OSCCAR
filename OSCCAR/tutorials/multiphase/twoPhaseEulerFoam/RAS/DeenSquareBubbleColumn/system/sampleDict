FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampleDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationScheme cellPoint;

setFormat       raw;

sets
(
    sampleLine
    {
        type    uniform;
        axis    distance;
        start   ( -0.075 0 0.25 );
        end     ( 0.075 0 0.25 );
        nPoints 100;
    }
);

fields
(
    U.water
);


