FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions          [ 1 -1 -2 0 0 0 0 ];

internalField       uniform $pressure;

boundaryField
{
    inlet
    {
        type               fixedFluxPressure;
        value              $internalField;
    }
    outlet
    {
        type               fixedValue;
        value              $internalField;
    }
    walls
    {
        type               fixedFluxPressure;
        value              $internalField;
    }
    bottom
    {
        type               fixedFluxPressure;
        value              $internalField;
    }
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
